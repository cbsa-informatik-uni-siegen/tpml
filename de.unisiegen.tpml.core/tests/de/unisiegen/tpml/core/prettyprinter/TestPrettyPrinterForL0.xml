<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<!DOCTYPE pretty-rule-set PUBLIC
	"-//University of Siegen//DTD Pretty Printer Rules 1.0//EN"
	"http://echobase.homeunix.net/tpml/dtds/pretty-rule-set_1.0.dtd">

<!--
	$Id$
	
	Sample rule set for the L0 language used in the TextPrettyPrinterForL0
	test case.
-->

<pretty-rule-set>
	<pretty-rule class="de.unisiegen.tpml.core.expressions.Abstraction" priority="0">
		<text style="keyword">Î»</text>
		<attribute>id</attribute>
		<text>.</text>
		<break />
		<attribute priority="0">e1</attribute>
	</pretty-rule>
	
	<pretty-rule class="de.unisiegen.tpml.core.expressions.Application" priority="1">
		<attribute priority="1">e1</attribute>
		<text> </text>
		<break />
		<attribute priority="2">e2</attribute>
	</pretty-rule>
	
	<pretty-rule class="de.unisiegen.tpml.core.expressions.Identifier" priority="2">
		<attribute>name</attribute>
	</pretty-rule>
</pretty-rule-set>
